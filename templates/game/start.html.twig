{% extends 'base.html.twig' %}

{% block title %} start game {% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('page_start_game') }}

    <script>
        const gameId = {{ game.id }};
    </script>
{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-md-12 text-center">
            <h1>Welcome to the game room {{ game.name }}!</h1><br>
            <h3>
                <span class="text-success">{{ game.playerOneName }}</span> VS <span class="text-danger">{{ game.playerTwoName }}!</span>
            </h3>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12 d-flex justify-content-center">
            <img class="game-card" src="{{ asset('images/cards/back.png') }}">
        </div>

        <div class="col-md-12 mt-4 d-flex justify-content-center">
            <button id="js-new-hand" class="btn btn-primary">Tirer une nouvelle main</button>
        </div>
    </div>

    <div id="js-hand-unsort" class="row mt-3 d-none">
        <div class="col-md-12 text-center">
            <h5>Main non triée</h5>

            <div id="js-hand-unsort-container"></div>
        </div>
    </div>

    <div id="js-hand-sort" class="row mt-3 d-none">
        <div class="col-md-12 text-center">
            <h5>Main triée</h5>

            <div id="js-hand-sort-container"></div>
        </div>
    </div>
{% endblock %}
